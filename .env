# MCP Environment Configuration
# Updated: June 2025

# Project Configuration
COMPOSE_PROJECT_NAME=mcp
COMPOSE_FILE=docker-compose.yml

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8811
MCP_ENVIRONMENT=production

# Network Configuration
MCP_NETWORK=mcp-network
MCP_SUBNET=172.40.1.0/24

# Application Configuration
LOG_LEVEL=info
MCP_DATA_DIR=./data
MCP_CACHE_DIR=./cache

# Logging
MCP_LOG_LEVEL=info
MCP_LOG_FORMAT=json

# Security
MCP_ENABLE_CORS=true
MCP_ENABLE_RATE_LIMITING=true

# Monitoring
MCP_ENABLE_METRICS=true
MCP_ENABLE_HEALTH_CHECK=true

# Resource Limits
MCP_MEMORY_LIMIT=2G
MCP_CPU_LIMIT=2.0

# File Paths (Windows paths)
MCP_CONFIG_PATH=c:\Users\ofayese\.docker\mcp\config.yaml
MCP_SECRETS_PATH=c:\Users\ofayese\.docker\mcp\secrets
MCP_REGISTRY_PATH=c:\Users\ofayese\.docker\mcp\registry.yaml

# Database Configuration
POSTGRES_DB=mcp
POSTGRES_USER=mcp
POSTGRES_PASSWORD=mcp_password
POSTGRES_HOST_AUTH_METHOD=scram-sha-256

# Redis Configuration
REDIS_PASSWORD=mcp

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Docker Socket
DOCKER_SOCKET_PATH=/var/run/docker.sock

# External Services
EXTERNAL_NETWORK=docker_default

# Feature Flags
MCP_EXPERIMENTAL_FEATURES=false
MCP_DEBUG_MODE=false
MCP_VERBOSE_LOGGING=false
